{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2020",
    "module": "esnext",
    "lib": [
      "es2017",
      "dom",
      "es2019",
      "es2020",
      "esnext"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@lightm-nft/nft-renderer": [
        "nft-renderer/src/index.ts"
      ],
      "@lightm-nft/nft-renderer/server": [
        "nft-renderer/src/server.ts"
      ],
      "@rmrk-team/ipfs-utils": [
        "libs/ipfs-utils/src/index.ts"
      ],
      "@rmrk-team/rmrk-2d-renderer": [
        "libs/rmrk-2d-renderer/src/index.ts"
      ],
      "@rmrk-team/rmrk-nft-renderer": [
        "libs/rmrk-nft-renderer/src/index.ts"
      ],
      "rmrk-hooks": [
        "libs/rmrk-hooks/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
