{
  "name": "ipfs-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ipfs-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/ipfs-utils",
        "main": "libs/ipfs-utils/src/index.ts",
        "tsConfig": "libs/ipfs-utils/tsconfig.lib.json",
        "assets": [
          "libs/ipfs-utils/*.md"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs ipfs-utils {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "tags": []
}
