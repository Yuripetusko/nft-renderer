{
  "name": "rmrk-evm-utils",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/rmrk-evm-utils/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/libs/rmrk-evm-utils",
        "main": "libs/rmrk-evm-utils/src/index.ts",
        "tsConfig": "libs/rmrk-evm-utils/tsconfig.lib.json",
        "assets": [
          "libs/rmrk-evm-utils/*.md"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs rmrk-evm-utils {args.ver} {args.tag}",
      "dependsOn": [
        "build"
      ]
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    }
  },
  "tags": []
}
