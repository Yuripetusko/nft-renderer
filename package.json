{
  "name": "rmrk-js",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "pnpm run --r --filter \"./packages/**\" build",
    "build:apps": "pnpm run --r --filter \"./apps/**\" build",
    "panda:prepare": "panda codegen --cwd=apps/composable-nft-renderer-app",
    "changeset:publish": "pnpm version:update && pnpm build && bun .scripts/formatPackageJson.ts && bun .scripts/generateProxyPackages.ts && changeset publish",
    "changeset:version": "changeset version",
    "clean": "pnpm run --r --parallel clean",
    "dev:react": "pnpm run --parallel --stream dev",
    "dev:next": "pnpm --filter composable-nft-renderer-app dev",
    "start": "pnpm --filter composable-nft-renderer-app start",
    "format": "biome format . --write",
    "lint": "biome check .",
    "lint:fix": "pnpm lint --apply",
    "test": "vitest",
    "test:build": "pnpm run --r --parallel test:build",
    "test:cov": "vitest run --coverage",
    "test:typecheck": "vitest typecheck",
    "test:ui": "vitest --ui",
    "test:update": "vitest --update",
    "typecheck": "pnpm run --r --parallel typecheck && tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.1",
    "@changesets/cli": "^2.27.1",
    "@pandacss/dev": "^0.27.0",
    "@preconstruct/cli": "^2.8.2",
    "@tanstack/query-core": "^5.17.9",
    "@types/node": "18.16.9",
    "glob": "^10.3.10",
    "prettier": "^2.8.5",
    "simple-git-hooks": "^2.9.0",
    "ts-node": "10.9.1",
    "typescript": "5.3.3"
  },
  "packageManager": "pnpm@8.14.1",
  "simple-git-hooks": {
    "pre-commit": "pnpm format && pnpm lint:fix"
  },
  "workspaces": [
    "packages/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
